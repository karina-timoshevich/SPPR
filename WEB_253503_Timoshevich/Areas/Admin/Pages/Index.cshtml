@page
@model WEB_253503_Timoshevich.UI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Блюда</h1>

<p>
    <a asp-page="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Создать новое
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Dish[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Dish[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.Dish[0].Category.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Dish[0].Calories)</th>
            <th>Изображение</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dish)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@(item.Category != null ? item.Category.Name : "Без категории")</td>
                <td>@Html.DisplayFor(modelItem => item.Calories)</td>
                <td>
                    <img src="@Url.Content(item.Image)" alt="@item.Name" style="max-width:100px; max-height:100px;" />
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Редактировать
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Детали
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    <a class="btn btn-primary" asp-page="./Index" asp-route-page-number="1">
        <i class="fas fa-angle-double-left"></i> Первая
    </a>
    <a class="btn btn-primary" asp-page="./Index" asp-route-page-number="@((Model.CurrentPage > 1) ? Model.CurrentPage - 1 : 1)">
        <i class="fas fa-angle-left"></i> Предыдущая
    </a>
    <span>Страница @Model.CurrentPage из @Model.TotalPages</span>
    <a class="btn btn-primary" asp-page="./Index" asp-route-page-number="@((Model.CurrentPage < Model.TotalPages) ? Model.CurrentPage + 1 : Model.TotalPages)">
        <i class="fas fa-angle-right"></i> Следующая
    </a>
    <a class="btn btn-primary" asp-page="./Index" asp-route-page-number="@Model.TotalPages">
        <i class="fas fa-angle-double-right"></i> Последняя
    </a>
</div>

